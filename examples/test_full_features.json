        {
          "title": "Overview",
          "content": [
            { "type": "paragraph", "text": "Welcome to the full-featured PDF generator test. This document demonstrates all the content types supported by our Rust-based PDF generator." },
            { "type": "callout", "text": "This is an informational callout box.", "callout_type": "info" },
            { "type": "callout", "text": "Be careful with this operation!", "callout_type": "warning", "title": "Caution" },
