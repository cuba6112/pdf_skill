          "content": [
            { "type": "paragraph", "text": "Here is a sample Rust function that demonstrates the code block feature:" },
            { "type": "code", "code": "fn main() {\n    let message = \"Hello, PDF!\";\n    println!(\"{}\", message);\n    \n    for i in 0..5 {\n        println!(\"Count: {}\", i);\n    }\n}", "language": "rust", "caption": "A simple Rust program" }
          ]
        },
        {
          "title": "Python Example",
          "content": [
            { "type": "code", "code": "def generate_pdf(input_file, output_file):\n    \"\"\"Generate a PDF from JSON input.\"\"\"\n    with open(input_file, 'r') as f:\n        data = json.load(f)\n    \n    builder = PDFBuilder(data)\n    builder.build(output_file)\n    \n    return True", "language": "python", "caption": "Python PDF generation function" }
          ]
        }
